auth_enabled: false

server:
  http_listen_port: 3100

common:
  ring:
    instance_addr: 127.0.0.1
    instance_id: "{{ inventory_hostname }}"
    kvstore:
      store: inmemory
  replication_factor: 1
  path_prefix: /loki

# Basic limits configuration
limits_config:
  # Reject old samples - allow up to 30 days old
  reject_old_samples: true
  reject_old_samples_max_age: "{{ (alloy_log_retention_days | default(30)) * 24 }}h"

  # Log retention configuration - keep data for 30 days
  retention_period: "{{ (alloy_log_retention_days | default(30)) * 24 }}h"
  max_query_lookback: "{{ (alloy_log_retention_days | default(30)) * 24 }}h"

  # Ingestion rate limits
  ingestion_rate_mb: {{ loki_ingestion_rate_mb_per_sec | default(8) }}
  ingestion_burst_size_mb: {{ loki_ingestion_burst_mb | default(16) }}

  # Per-user rate limits
  per_stream_rate_limit: {{ loki_per_user_rate_mb_per_sec | default(4) * 1024 * 1024 }}
  per_stream_rate_limit_burst: {{ loki_per_user_burst_mb | default(8) * 1024 * 1024 }}

  # Maximum line size and other ingestion limits
  max_line_size: 262144  # 256KB per log line
  max_line_size_truncate: true

schema_config:
  configs:
  - from: 2020-05-15
    store: tsdb
    object_store: filesystem
    schema: v13
    index:
      prefix: index_
      period: 24h

storage_config:
  filesystem:
    directory: /loki/chunks

# Compactor configuration for retention management
compactor:
  working_directory: /loki/compactor
  compaction_interval: 10m
  retention_enabled: true
  retention_delete_delay: 2h
  retention_delete_worker_count: 150
  delete_request_store: filesystem



ruler:
  storage:
    type: local
    local:
      directory: /loki/rules
  rule_path: /loki/rules-temp
  alertmanager_url: ""
  ring:
    instance_id: "{{ inventory_hostname }}"
    kvstore:
      store: inmemory
  enable_api: true 