# DNS configuration
# This file contains DNS entries for services
# Format: address=/hostname.domain/ip

{% set wg_ip = (
    wireguard_address
      | default(dnsmasq_server_ip | default(ansible_default_ipv4.address | default('127.0.0.1')), true)
      | regex_replace('/[0-9]+$', '')
  ) %}
address=/jenkins.{{ dnsmasq_domain }}/{{ wg_ip }}

